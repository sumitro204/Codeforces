#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin >> t;
    while(t--){
        int n, k;
        cin>>n>>k;
        vector<int>v;

        for(int i=0; i<n; i++){
           int x;
           cin>>x;
           v.push_back(x);
        }
        vector<int> New_v = v;

        sort(v.begin(),v.end());
        
        if(k>1 || New_v == v){
            cout<<"YES"<<endl;
        }
        else{
            cout<<"NO"<<endl;
        }
    }

    return 0;
}
